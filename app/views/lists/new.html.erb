<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a list</h3>
        <%= simple_form_for [@list] do |f| %>
          <%= f.input :name, placeholder: 'Type name for new list' %>
          <%= f.submit "Sumbit", class: "btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
